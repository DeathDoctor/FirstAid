<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lkhedma.firstaid.NouveauContact">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nouveau contact"
            android:padding="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veuilliez remplir les information ci-dessous : "
            android:padding="20dp"/>

        <EditText
            android:id="@+id/nom_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:textCursorDrawable="@android:color/black"
            android:padding="20dp"/>

        <EditText
            android:id="@+id/numero_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero"
            android:padding="20dp"
            android:textCursorDrawable="@android:color/black"/>

        <EditText
            android:id="@+id/specification_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Specification"
            android:padding="20dp"
            android:backgroundTint="@android:color/black"/>

        <Button
            android:id="@+id/ajouter"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="Ajouter"
            android:layout_margin="40dp"
            android:fontFamily=""
            android:background="@drawable/button_file"
            android:textStyle="bold"
            android:textSize="18sp"
            android:onClick="addContact"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
