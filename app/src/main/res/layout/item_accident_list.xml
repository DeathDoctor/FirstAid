<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@drawable/item3">

    <ImageView
        android:id="@+id/icon_accident"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/nom_accident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/icon_accident"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_above="@+id/id_accident"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="13dp" />

    <TextView
        android:id="@+id/id_accident"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="TextView"
        android:layout_alignBottom="@+id/icon_accident"
        android:layout_alignStart="@+id/nom_accident" />

</RelativeLayout>