<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lkhedma.firstaid.IngestionProduitCaustique">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:src="@drawable/slide" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Ingestion de produits caustiques"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

        </LinearLayout>



        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/ipc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Esprit de sel"/>

                    <RadioButton
                        android:id="@+id/ipc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luiquide de batterie"/>

                    <RadioButton
                        android:id="@+id/ipc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Détartant WC"/>

                    <RadioButton
                        android:id="@+id/ipc4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Antirouille"/>
                    <RadioButton
                        android:id="@+id/ipc5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Désinfectant"/>
                    <RadioButton
                        android:id="@+id/ipc6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Déboucheur"/>
                    <RadioButton
                        android:id="@+id/ipc7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pile Bouton"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/ipc8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Détergent ménager"/>

                    <RadioButton
                        android:id="@+id/ipc9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eau de javel"/>

                    <RadioButton
                        android:id="@+id/ipc10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agent de blanchiment"/>

                    <RadioButton
                        android:id="@+id/ipc11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eau de javel"/>
                    <RadioButton
                        android:id="@+id/ipc12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lessive pour machine à laver"/>
                    <RadioButton
                        android:id="@+id/ipc13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autres"/>

                </LinearLayout>



        </RadioGroup>



    </LinearLayout>



</android.support.constraint.ConstraintLayout>
