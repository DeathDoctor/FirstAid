<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lkhedma.firstaid.Chute"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:orientation="vertical"
         android:padding="4dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@drawable/item">

             <ImageView
                 android:layout_margin="6dp"
                 android:layout_width="70dp"
                 android:layout_height="70dp"
                 android:layout_gravity="center_horizontal"
                 android:src="@drawable/slide" />

             <TextView
                 android:id="@+id/textView2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:fontFamily="sans-serif"
                 android:text="Chute"
                 android:textColor="@android:color/black"
                 android:textSize="34sp" />

         </LinearLayout>

         <TextView
             android:id="@+id/textView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Veuillez sélectionner les signes observés :"
             android:textColor="@android:color/black"
             android:layout_marginBottom="8dp"
             android:textSize="14sp"
             android:layout_marginTop="8dp"  />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:background="@drawable/item"
             android:layout_marginBottom="4dp"
             android:paddingTop="2dp"
             android:paddingBottom="8dp"
             android:paddingRight="6dp">

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical">

                 <CheckBox
                     android:id="@+id/s1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="13sp"
                     android:text="membre douloureux" />

                 <CheckBox
                     android:id="@+id/s2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="14sp"
                     android:text="membre déformé" />

                 <CheckBox
                     android:id="@+id/s3"
                     android:layout_width="wrap_content"
                     android:textSize="13sp"
                     android:layout_height="wrap_content"
                     android:text="articulation douloureuse"
                     android:layout_marginBottom="4dp"/>

                 <CheckBox
                     android:id="@+id/s4"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="articulation déformée et gonflée"
                     android:textSize="13sp"
                     android:layout_marginBottom="4dp"/>

                 <CheckBox
                     android:id="@+id/s5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="fourmillement du membre"
                     android:textSize="13sp"
                     />

                 <CheckBox
                     android:id="@+id/s6"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="trouble de sensibilité"
                     android:textSize="13sp"/>

                 <CheckBox
                     android:id="@+id/s7"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="paralysie totale ou partielle"
                     android:textSize="13sp"/>


             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:layout_gravity="right" >


                 <CheckBox
                     android:id="@+id/s8"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="trouble de l'équlibre"
                     android:textSize="13sp"/>

                 <CheckBox
                     android:id="@+id/s9"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="plaie ou bosse sur la tête"
                     android:textSize="13sp"
                     android:layout_marginBottom="4dp"/>

                 <CheckBox
                     android:id="@+id/s10"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="maux de tête inhabituels"
                     android:textSize="13sp"
                     android:layout_marginBottom="4dp"/>

                 <CheckBox
                     android:id="@+id/s11"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="nausée"
                     android:textSize="13sp"/>

                 <CheckBox
                     android:id="@+id/s12"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="vomissement"
                     android:textSize="13sp"/>

                 <CheckBox
                     android:id="@+id/s13"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="saignement par nez"
                     android:textSize="13sp"/>

             </LinearLayout>
         </LinearLayout>
         <Button
             android:onClick="diagnostiquer"
             android:layout_marginTop="6dp"
             android:layout_width="240dp"
             android:layout_height="55dp"
             android:text="Diagnostiquer"
             android:textStyle="bold"
             android:textSize="18sp"
             android:background="@drawable/button_file"
             android:layout_gravity="center_horizontal" />
     </LinearLayout>

</android.support.constraint.ConstraintLayout>
